<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.server.mapper.WarehouseMapper">

    <resultMap id="WarehouseEmployeeMap" type="org.server.entity.Warehouse">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="operators" ofType="org.server.entity.Employee">
            <id column="eid" property="id"/>
            <result column="ename" property="name"/>
            <result column="gender" property="gender"/>
            <result column="phone" property="phone"/>
            <result column="birthday" property="birthday"/>
            <result column="hire_date" property="hireDate"/>
            <result column="salary" property="salary"/>
        </collection>
    </resultMap>

    <resultMap id="WarehouseProductMap" type="org.server.entity.Product">
        <id column="pid" property="id"/>
        <result column="pname" property="name"/>
        <result column="supplier" property="supplier"/>
        <result column="amount" property="total"/>
    </resultMap>

    <!-- 查询仓库列表及其负责人 -->
    <select id="getWarehouseList" resultMap="WarehouseEmployeeMap">
        select * from view_warehouse_employee
        <if test="keyword != null">
            where name like concat('%',#{keyword},'%')
        </if>
    </select>

    <!-- 按id查询仓库中产品信息 -->
    <select id="getProductListById" resultMap="WarehouseProductMap">
        select pid, pname, supplier, amount
        from view_warehouse_product where id=#{id}
    </select>

    <select id="getWarehouseById" resultType="org.server.entity.Warehouse">
        select * from tb_warehouse where id=#{id}
    </select>

    <select id="getWarehouseByName" resultType="org.server.entity.Warehouse">
        select * from tb_warehouse where name=#{name}
    </select>

    <insert id="addWarehouse" parameterType="org.server.entity.Warehouse">
        insert ignore into tb_warehouse(name) values (#{name})
    </insert>

    <update id="updateWarehouse" parameterType="org.server.entity.Warehouse">
        update tb_warehouse
        set name=#{name}
        where id=#{id}
    </update>

    <insert id="addWarehouseProduct">
        insert into tb_warehouse_product(wid, pid, amount)
        values (#{wid}, #{pid}, #{amount})
    </insert>

    <update id="updateWarehouseProduct">
        update tb_warehouse_product
        set amount = amount + #{amount}
        where wid=#{wid} and pid=#{pid}
    </update>

    <insert id="addEmployeeByWid">
        insert ignore into tb_employee_warehouse(wid, eid) values
        <foreach collection="eidList" item="item" separator=",">
            (#{wid}, #{item})
        </foreach>
    </insert>

    <delete id="deleteAllEmployeeByWid">
        delete from tb_employee_warehouse where wid=#{wid}
    </delete>

<!--    <delete id="deleteWarehouseById">-->
<!--        delete from tb_warehouse where id=#{id}-->
<!--    </delete>-->
</mapper>
