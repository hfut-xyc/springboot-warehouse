<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.server.mapper.ProductMapper">

    <select id="getProductList" resultType="org.server.entity.Product">
        select * from view_product_warehouse
        <if test="keyword != null">
            where name like concat('%',#{keyword},'%')
        </if>
    </select>

    <select id="getProductByName" resultType="org.server.entity.Product">
        select * from view_product_warehouse
        where name=#{name}
    </select>

    <insert id="addProduct">
        insert into tb_product(name, supplier)
        values (#{name}, #{supplier});
    </insert>


</mapper>
